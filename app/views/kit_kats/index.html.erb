	<div class="kitkats container-fluid well">
		<div class="col-md-4">
			<h2><%= k.name %></h2>
			<hr>
			<p><%= k.description %></p>
			<p>Approximate cost:<%= k.cost %> å††</p>
			<p>Approximate location: <%= k.location %></p>
